idades = []

alturas = []

for i in range(5):

    idade = int(input("Digite a idade da pessoa {}: ".format(i+1)))

    altura = float(input("Digite a altura da pessoa {}: ".format(i+1)))

    idades.append(idade)

    alturas.append(altura)

print("\nIdades e alturas na ordem inversa:")

para i no intervalo (4, -1, -1):

    print("Pessoa {}: Idade: {} | Altura: {}".format(i+1, idades[i], alturas[i]))
    vetor = []

# Leitura dos elementos do vetor

for i in range(10):

    num = int(input("Digite o número {}: ".format(i+1)))

    vetor.append(num)

# Cálculo da soma dos quadrados dos elementos

soma_quadrados = 0

for num in vetor:

    soma_quadrados += num ** 2

# Exibição do resultado

print("A soma dos quadrados dos elementos do vetor é:", soma_quadrados)
vetor1 = []

vetor2 = []

vetor3 = []

# Leitura dos elementos dos vetores 1 e 2

print("Digite os elementos do vetor 1:")

for i in range(10):

    num = int(input("Digite o número {}: ".format(i+1)))

    vetor1.append(num)

print("\nDigite os elementos do vetor 2:")

for i in range(10):

    num = int(input("Digite o número {}: ".format(i+1)))

    vetor2.append(num)

# Intercalação dos elementos nos vetor 3

for i in range(10):

    vetor3.append(vetor1[i])

    vetor3.append(vetor2[i])

# Exibição do vetor 3

print("\nVetor 3 (intercalado):", vetor3)
# Função para intercalar os elementos dos três vetores

def intercalar_vetores(vetor1, vetor2, vetor3):

    vetor_intercalado = []

    for i in range(len(vetor1)):

        vetor_intercalado.append(vetor1[i])

        vetor_intercalado.append(vetor2[i])

        vetor_intercalado.append(vetor3[i])

    return vetor_intercalado

# Função para ler os elementos de um vetor

def ler_vetor():

    vetor = []

    for i in range(10):

        elemento = int(input(f"Digite o elemento {i+1}: "))

        vetor.append(elemento)

    return vetor

# Ler os três vetores

print("Digite os elementos do primeiro vetor:")

vetor1 = ler_vetor()

print("Digite os elementos do segundo vetor:")

vetor2 = ler_vetor()

print("Digite os elementos do terceiro vetor:")

vetor3 = ler_vetor()

# Gerar o vetor intercalado

vetor_intercalado = intercalar_vetores(vetor1, vetor2, vetor3)

# Imprimir o vetor intercalado

print("Vetor intercalado:")

print(vetor_intercalado)
